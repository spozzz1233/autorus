<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoRus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/text_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/text_main</item>
        <item name="colorOnSecondary">@color/text_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Text">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="search_form">
        <item name="tint">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:backgroundTint">@color/grey_tint_search</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:drawableTint">@color/light_grey</item>
    </style>
</resources>